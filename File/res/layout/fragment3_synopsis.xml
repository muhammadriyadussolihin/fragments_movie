<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ImageView untuk menampilkan gambar sinopsis -->
            <ImageView
                android:id="@+id/Horor1sinopsis"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/horor1" />
            <!-- Ganti dengan sumber gambar sesuai kebutuhan -->

            <!-- TextView untuk menampilkan teks sinopsis -->
            <TextView
                android:id="@+id/sinopsisHoror1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:text="@string/sinopsis_horor1"
                android:paddingTop="16dp"
                android:maxLines="10"
                android:ellipsize="end"
                android:scrollbars="vertical" />
            <!-- Tambahkan scrollbar jika diperlukan -->

        </LinearLayout>

    </ScrollView>

