                android:paddingTop="16dp"
                android:maxLines="10"
                android:ellipsize="end"
                android:scrollbars="vertical" />
            <!-- Tambahkan scrollbar jika diperlukan -->

        </LinearLayout>

    </ScrollView>



</RelativeLayout>
